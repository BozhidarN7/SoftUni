<main>
    <form class="theater-form"  method="POST">
        <h1>Create Theater</h1>
        <div>
            <label for="title">Theater Title:</label>
            <input name="title" type="text" placeholder="Theater name" value="">
        </div>
        <div>
            <label for="description">Theater Description:</label>
            <textarea name="description" placeholder="Description" ></textarea>
        </div>
        <div>
            <label for="imageUrl">Image url:</label>
            <input name="imageUrl" type="text" placeholder="Image Url" value="">
        </div>
        <div class="check">
            <input name="isPublic" type="checkbox" id="check-box" >
            <label for="check-box">Public</label>
        </div>
        <button class="btn" type="submit">Submit</button>
    </form>
</main>