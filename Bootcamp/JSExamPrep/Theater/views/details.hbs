<main>
    <div class='container'>

        <section class='details'>
            <h1>{{theater.title}}</h1>
            <div>
                <img src='{{theater.imageUrl}}' />
            </div>
        </section>

        <section class='details'>
            <h3>Theater Description</h3>
            <p>{{theater.descritpion}}</p>
            <div class='buttons'>
                {{#if canDeleteAndEdit}}
                    <a
                        class='btn delete'
                        href='/{{theater._id}}/delete'
                    >Delete</a>
                    <a class='btn edit' href='/{{theater._id}}/edit'>Edit</a>
                {{/if}}
                {{#if liked}}
                    <span class='liked'>You have already liked this play!</span>
                {{else}}
                    <a class='btn like' href='/{{theater._id}}/like'>Like</a>
                {{/if}}
            </div>
        </section>
    </div>
</main>