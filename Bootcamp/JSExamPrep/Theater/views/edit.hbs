<main>
    <form class='theater-form' method='POST'>
        <h1>Edit Theater</h1>
        <div>
            <label for='title'>Theater Title:</label>
            <input
                type='text'
                placeholder='Theater name'
                value='{{theater.title}}'
                name='title'
            />
        </div>
        <div>
            <label for='description'>Theater Description:</label>
            <textarea
                name='description'
                placeholder='Description'
            >{{theater.description}}</textarea>
        </div>
        <div>
            <label for='imageUrl'>Image url:</label>
            <input
                type='text'
                placeholder='Image Url'
                value='{{theater.imageUrl}}'
                name='imageUrl'
            />
        </div>
        <div class='check'>
            <input type='checkbox' id='check-box' {{theater.checked}} />
            <label for='check-box'>Public</label>
        </div>
        <button class='btn' type='submit'>Submit</button>
    </form>
</main>